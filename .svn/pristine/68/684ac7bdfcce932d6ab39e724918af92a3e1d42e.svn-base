<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:p="http://primefaces.org/ui"
                template="/WEB-INF/template.xhtml">

    <ui:define name="head">
        <script type="text/javascript">
            function skinChart() {
                this.cfg.shadow = false;
                this.cfg.seriesColors = ['#71CC8D', '#33AFDE', '#F7941E'];
                this.cfg.grid = {
                    background: '#EDF3F6',
                    borderColor: '#D9E3E8',
                    gridLineColor: '#D9E3E8',
                    shadow: false
                };
                this.cfg.axesDefaults = {
                    rendererOptions: {
                        textColor: '#778D9B'
                    }
                };
                this.cfg.seriesDefaults = {
                    shadow: false,
                    markerOptions: {
                        shadow: false
                    }
                };
            }

            function skinPie() {
                this.cfg.seriesColors = ['#dae8ef', '#27aae1', '#33ccff', '#9fadb5'];
                this.cfg.grid = {
                    background: '#ffffff',
                    borderColor: '#eaeaea',
                    gridLineColor: '#e5ebf0',
                    shadow: false,
                    borderWidth: 0
                };
                this.cfg.seriesDefaults.shadow = false;
            }
        </script>
        <style type="text/css">
            .jqplot-target, .jqplot-axis {
                color: #778D9B;
            }
        </style>
    </ui:define>

    <ui:define name="content">

        <div class="layout-portlets-box">
            <div class="Container100 Responsive100">
                <div class="ContainerIndent">
                    <h3 class="BigTopic">
                        <div class="Wid50 Responsive50 Fleft">Ahorros por devolver</div>
                    </h3>
                    <h:form id="frmHistBajas">
                        <f:event type="preRenderComponent" rendered="true" listener="#{ahorrosXDevBean.init}"/>

                        <p:dataTable id="tblBajas" var="baja"  
                                     value="#{ahorrosXDevBean.bajas}"                                 
                                     selection="#{ahorrosXDevBean.bajaSelected}"
                                     selectionMode="single" 
                                     rowKey="#{baja.usuId}"
                                     filterEvent="enter" 
                                     paginatorPosition="bottom" reflow="true"   
                                     scrollable="true" scrollHeight="90%"
                                     paginator="true" rows="25"  
                                     paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
                                     rowsPerPageTemplate="25, 35, 45"
                                     >  

                            <p:column style='position: relative' filterBy="#{baja.empAbreviacion}" filterMatchMode="contains">  
                                <f:facet name="header"  >  
                                    <h:outputText value="Clave"/>  
                                </f:facet>  
                                <h:outputText  value="#{baja.usuClaveEmpleado}" />  
                            </p:column>  

                            <p:column style='position: relative' filterBy="#{baja.empAbreviacion}" filterMatchMode="contains">  
                                <f:facet name="header">  
                                    <h:outputText value="Empresa" />  
                                </f:facet>  
                                <h:outputText value="#{baja.empAbreviacion}" />  
                            </p:column> 
                            <p:column style='position: relative' filterBy="#{baja.usuNombreCompleto}" filterMatchMode="contains">  
                                <f:facet name="header">  
                                    <h:outputText value="Nombre"/>  
                                </f:facet>  
                                <h:outputText value="#{baja.usuNombreCompleto}" />  
                            </p:column> 
                            <p:column style='position: relative' sortBy="#{baja.usuFechaBaja}">  
                                <f:facet name="header">  
                                    <h:outputText value="Fecha baja"/>  
                                </f:facet>  
                                <h:outputText value="#{baja.usuFechaBaja}" >  
                                    <f:convertDateTime pattern="dd/MM/yyyy" />
                                </h:outputText>   
                            </p:column> 
                            <p:column style='position: relative' sortBy="#{baja.baeAhorros}">  
                                <f:facet name="header">  
                                    <h:outputText value="Ahorros"/>  
                                </f:facet>  
                                <h:outputText value="#{baja.baeAhorros}"  > 
                                    <f:convertNumber maxFractionDigits="2" minFractionDigits="2" type="currency" currencySymbol="$"/>
                                </h:outputText>   
                            </p:column> 

                        </p:dataTable> 


                        <p:contextMenu for="tblBajas" style="width : 200px" >  

                            <p:menuitem value="Ver detalle" 
                                        icon="fa fa-search" 
                                        actionListener="#{ahorrosXDevBean.goToFiniquito}"
                                        />  

                        </p:contextMenu> 
                    </h:form>   
                </div>
            </div>
        </div>
    </ui:define>

</ui:composition>
